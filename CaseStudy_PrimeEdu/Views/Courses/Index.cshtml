@*Define model*@
@model IEnumerable<Course>

@*Define ViewData*@
@{
    ViewData["Title"] = "Courses";
}

@*Write code*@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model =>model.Name)</th>
                    <th>@Html.DisplayNameFor(model =>model.Description)</th>
                    <th>@Html.DisplayNameFor(model =>model.Location)</th>
                    <th>@Html.DisplayNameFor(model =>model.CourseDuration)</th>
                    <th>@Html.DisplayNameFor(model =>model.TeacherName)</th>
                    <th>@Html.DisplayNameFor(model =>model.StartDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CourseDuration)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TeacherName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Students" asp-route-id="@item.Id"><i class="bi bi-geo-fill"></i>Students </a>
                            <a class="btn btn-outline-primary" asp-action="Tests" asp-route-id="@item.Id"><i class="bi bi-pencil"></i>Tests </a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>
                             @* <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a>*@
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="align-content: center;" class="text-white">
    <a asp-controller="Courses" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New</a>
</div>
